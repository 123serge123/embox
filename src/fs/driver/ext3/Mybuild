package embox.fs.driver

abstract module ext3fs {
	//option number inode_quantity=64
	//option number ext3_descriptor_quantity=4

	source "ext3fs_file_ops.c"
	source "ext3fs_drv.c"
	source "ext3fs_mem.c"
